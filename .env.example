# ==============================================================================
# Thudbot Environment Configuration  
# ==============================================================================
# Copy this file to .env and fill in your actual values

# ==============================================================================
# REQUIRED API KEYS
# ==============================================================================

# OpenAI API Key - Required for LLM functionality
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here


# ==============================================================================
# OPTIONAL: LANGSMITH TRACING (for observability and debugging)
# ==============================================================================

# Enable LangSmith tracing
# Uncomment to enable LangSmith monitoring and tracing
# LANGCHAIN_TRACING_V2=true

# LangSmith API key  
# Get LangSmith API key from: https://langsmith.langchain.com/
# LANGCHAIN_API_KEY=your_langsmith_api_key_here

# Project name for organizing traces (optional)
# LANGCHAIN_PROJECT=THUDBOT-CC

# ==============================================================================
# OPTIONAL: DEVELOPMENT SETTINGS
# ==============================================================================

# Enable debug mode for verbose logging (optional)
# DEBUG=True

# Qdrant server endpoint and target collection
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=Thudbot_Hints

########################################
# Redis Configuration Examples
#
# Choose ONE of the following configurations
# depending on how Redis is running.
#
# Only one REDIS_HOST value should be active
# in the real .env file.
########################################


########################################
# 1) Docker-to-Docker (RECOMMENDED / PROD)
#
# Use this when Redis runs as a container
# on the same Docker network as Thudbot.
#
# This is the default and production-safe
# configuration.
########################################

REDIS_HOST=thudbot-redis
REDIS_PORT=6379


########################################
# 2) Docker → Host Machine (LOCAL DEV ONLY)
#
# Use this when:
# - Thudbot runs in Docker
# - Redis runs directly on the host machine
#
# Note:
# - Works on macOS and Windows
# - Does NOT work on Linux without extra setup
########################################

# REDIS_HOST=host.docker.internal
# REDIS_PORT=6379


########################################
# 3) Host → Host (NO DOCKER)
#
# Use this when both Thudbot and Redis
# run directly on the same machine
# without Docker.
########################################

# REDIS_HOST=localhost
# REDIS_PORT=6379

